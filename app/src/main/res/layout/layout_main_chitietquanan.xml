<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/layout_toolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="?attr/actionBarSize">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:background="@color/black"
                    android:padding="5dp"
                    android:drawableTop="@drawable/gallery"
                    android:text="Tải ảnh"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:background="@color/black"
                    android:padding="5dp"
                    android:drawableTop="@drawable/gallery"
                    android:text="Check in"/>
                <Button
                    android:id="@+id/btnBinhLuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:background="@color/black"
                    android:padding="5dp"
                    android:drawableTop="@drawable/gallery"
                    android:text="Bình luận"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:background="@color/black"
                    android:padding="5dp"
                    android:drawableTop="@drawable/gallery"
                    android:text="Lưu lại"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">
                <ImageView
                    android:id="@+id/imgHinhQuanAn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/download"
                    android:scaleType="fitXY"
                    />
                <VideoView
                    android:id="@+id/videoTrailer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/imgPlayTrailer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/play_circle"
                    android:visibility="gone"
                    />
            </FrameLayout>

            <TextView
                android:id="@+id/txtTenQuanAn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gogi house"
                android:textColor="@color/red_2027"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                />
            <TextView
                android:id="@+id/txtDiaChiQuanAn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23 tran hung dao"
                android:paddingLeft="10dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBackgroundTrangChu"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tongSoHinhAnh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tai anh"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tongSoCheckIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="132"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check-in" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/txtBinhLuanClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tongSoBinhLuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Binh luan" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tongSoLuuLai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="132"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Luu lai" />
                </LinearLayout>
                <!--            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="132"
                                    android:textStyle="bold"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Chia se" />
                            </LinearLayout>-->

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/thoiGianHoatDong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7:00 - 20:00"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/trangThaiHoatDong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa mở cửa"
                    android:textSize="16sp"/>

            </LinearLayout>

            <include layout="@layout/layout_tinhnang_chitietquanan"/>

            <include layout="@layout/layout_thucdon_chitiet"/>

            <include layout="@layout/layout_binhluan_chitietquanan"/>

        </LinearLayout>







    </androidx.core.widget.NestedScrollView>

    

</androidx.coordinatorlayout.widget.CoordinatorLayout>
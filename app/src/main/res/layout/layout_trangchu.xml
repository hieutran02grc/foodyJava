<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundTrangChu"
    tools:context=".src.View.TrangChuActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/red_2027">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

            <RadioGroup
                android:id="@+id/select_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/custombackground_radiobtngroup_tt">

                <RadioButton
                    android:id="@+id/select_places"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/places"
                    android:button="@android:color/transparent"
                    android:background="@drawable/customradio_places"
                    android:padding="10dp"
                    android:checked="true"
                    android:textColor="@drawable/textchange_radio_tt"/>

                <RadioButton
                    android:id="@+id/select_food"
                    android:layout_width="63dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/customredio_food"
                    android:button="@android:color/transparent"
                    android:padding="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/food"
                    android:textColor="@drawable/textchange_radio_tt"/>

            </RadioGroup>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                app:srcCompat="@android:drawable/ic_menu_add" />
        </androidx.appcompat.widget.Toolbar>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager_trangchu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:backgroundTint="@color/colorAccent">

        </androidx.viewpager.widget.ViewPager>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>